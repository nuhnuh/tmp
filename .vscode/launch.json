{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/tmp/VELETA.basalt/build/basalt_vio",
            "args": [
                "--dataset-path", "${workspaceFolder}/../data/t265_calib_data/sequence0",
                "--cam-calib", "${workspaceFolder}/../data/t265_calib_data/cam_calib/calibration.json",
                "--dataset-type", "euroc",
                "--config-path", "${workspaceFolder}/basalt/data/euroc_config.json",
                "--show-gui", "1"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [ { "name": "LD_LIBRARY_PATH", "value": "${workspaceFolder}/tmp/build:${LD_LIBRARY_PATH}" } ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}